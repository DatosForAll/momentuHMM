citHeader("To cite the R package 'moveHMMext' in publications, use:")

year <- sub("-.*","",meta$Date)
note <- sprintf("R package version %s",meta$Version)

bibentry(bibtype = "Manual",
         title = "{moveHMMext}: Animal Movement Modelling using Hidden Markov Models",
         author = c(person("Brett","McClintock"),
                    person("Theo","Michelot"),
                    person("Roland","Langrock"),
                    person("Toby","Patterson"),
                    person("Eric","Rexstad")),
         year = year,
         note = note)
